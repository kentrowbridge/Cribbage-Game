<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:layout_marginBottom="0dp"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:layout_marginTop="0dp"
    android:background="#228b22"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <SurfaceView
                    android:id="@+id/tableSV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#000000" />

                <FrameLayout
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0" >
                </FrameLayout>

                <LinearLayout
                    android:layout_width="175dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0" >

                            <TextView
                                android:id="@+id/tallyCountTxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0"
                                android:background="#0000ff"
                                android:text="Tally Count:"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/tallyCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:background="#00f0f0"
                                android:text="COUNT"
                                android:textSize="20sp" />

                        </LinearLayout>

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="10dp"
                            android:layout_weight="0"
                            android:minHeight="5dp" >
                        </FrameLayout>

                        <TextView
                            android:id="@+id/tutorialText"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#00ff00"
                            android:text="Tutorial Box"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_weight="0" >
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/p2ScoreText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#ff0000"
                        android:text="P2 Score: "
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="25sp" />

                    <TextView
                        android:id="@+id/p2Score"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:background="#00ffff"
                        android:text="SCORE"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="25sp" />

                    <ProgressBar
                        android:id="@+id/player2progress"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:max="121"
                        android:progress="58" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/p1ScoreText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#ff0000"
                        android:text="P1 Score: "
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="25sp" />

                    <TextView
                        android:id="@+id/p1score"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:background="#00ffff"
                        android:text="SCORE"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="25sp" />

                    <ProgressBar
                        android:id="@+id/Player1progress"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:max="121"
                        android:progress="50" />
                </LinearLayout>
            </LinearLayout>

            <FrameLayout
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_weight="0" >
            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/button1"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="Menu"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/button2"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="Confirm"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_weight="0" >
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <SurfaceView
                android:id="@+id/deckSV"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:background="#b22222" />

            <FrameLayout
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_weight="0" >

            </FrameLayout>

            <SurfaceView
                android:id="@+id/p1HandSV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <FrameLayout
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_weight="0" >

            </FrameLayout>

            <SurfaceView
                android:id="@+id/cribSV"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:background="#b22222" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>

